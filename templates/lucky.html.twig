{# templates/base.html.twig #}

{% extends "base.html.twig" %}

{% block title %}Magic number{% endblock %}

{% block body %}
    <div class="main-box">
        <h1>Magic number</h1>

        <a href="{{ asset('img/image.jpg') }}">
            <img src="{{ asset('img/' ~ image) }}" alt="Random Image">
        </a>

        <p>This is the current magic number: {{ number }}</p>
    </div>
{% endblock %}
